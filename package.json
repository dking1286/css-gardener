{
  "name": "root",
  "private": true,
  "scripts": {
    "check_common_dependencies": "lumo --auto-cache -c scripts scripts/css_gardener/scripts/check_common_dependencies.cljs",
    "clean": "lumo --auto-cache -c scripts scripts/css_gardener/scripts/remove_build_caches.cljs",
    "get_packages": "lumo --auto-cache -c scripts scripts/css_gardener/scripts/get_packages.cljs",
    "update_version": "lumo --auto-cache -c scripts scripts/css_gardener/scripts/update_version.cljs",
    "for_each_package": "scripts/css_gardener/scripts/for_each_package",
    "lint": "npm run for_each_package -- 'npm run lint'",
    "release": "npm run for_each_package -- 'npm run release'",
    "compile-tests": "npm run for_each_package -- 'npm run compile-tests'",
    "run-tests": "npm run for_each_package -- 'npm run run-tests'",
    "test": "npm run for_each_package -- 'npm test'",
    "deploy": "npm run clean && npm test && npm run clean && npm run for_each_package -- 'npm run deploy'"
  },
  "dependencies": {
    "@css-gardener/semantic-release-plugin": "file:packages/semantic-release-plugin",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.0.7",
    "fs-extra": "9.0.1",
    "semantic-release": "^17.1.1"
  },
  "devDependencies": {
    "lumo-cljs": "1.10.1",
    "xml2js": "0.4.23"
  }
}
